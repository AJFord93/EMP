<main>

<div class="jumbotron">
  <div class="container">
      <h1>Update Contacts</h1>
      <p>Please select a contact to update.</p>
      <p><a class="btn btn-warning btn-lg" href="/" role="button">Add Contact</a></p>
    </div>
  </div>


<div class="col-md-12">
<table class="table table-hover">
  <thead class="thead-default">
  <tr>
    <th> Legal First Name </th>
    <th> Legal Last Name </th>
    <th> Performer First Name </th>
    <th> Performer Last Name </th>
    <th> Phone </th>
    <th> Email </th>
    <th> Company </th>
    <th> Location </th>
    <th> Twitter </th>
    <th> Instagram </th>
    <th> Exclusive </th>
    <th> Delete </th>
    <th> Edit </th>
  </tr>

<tbody>
{{#each contacts}}
    <tr>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{performer_first_name}} </td>
        <td>{{performer_last_name}} </td>
        <td>{{phone}}</td>
        <td class="expand">{{email}}</td>
        <td class="shrink">{{company}}</td>
        <td>{{current_city}}</td>
        <td>{{twitter}}</td>
        <td class="shrink">{{instagram}}</td>
        <td>{{exclusive}}</td>
        <td class="shrink">
          <form action="/api/contacts/{{ id }}?_method=DELETE" id="{{id}}" method="post">
          <button type="submit" form="{{id}}"  value="submit" class="btn btn-danger">X</button>
        </form>
        </td>

        <td class="shrink">
          <a href="/edit/{{id}}" type="submit"  value="submit"><button class="btn btn-success ">âœ“</button></a>
        </td>
    </tr>
{{/each}}
</tbody>

</table>
</div>
</div>
</div>
</main>

  {{/if}}
  <div class="card-body">
    <h4 class="card-title">{{performer_first_name}} {{performer_last_name}}</h4>
    <h6 class="card-subtitle"> {{first_name}} {{last_name}} </h6>
    <p class="card-text">
      <ul>
        <li> {{phone}} </li>
        <li> {{email}} </li>
        {{#if twitter}}
